<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_margin="8dp"
        android:layout_toStartOf="@+id/ivStaticMapPreview"
        android:layout_toLeftOf="@+id/ivStaticMapPreview"
        android:layout_width="match_parent"
        android:text="map preview sample map preview sample"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_alignTop="@+id/ivStaticMapPreview"
        android:layout_alignStart="@+id/ivStaticMapPreview"
        android:layout_alignLeft="@+id/ivStaticMapPreview"
        android:layout_alignEnd="@+id/ivStaticMapPreview"
        android:layout_alignRight="@+id/ivStaticMapPreview"
        android:layout_alignBottom="@+id/ivStaticMapPreview"
        android:padding="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivStaticMapPreview"
        android:layout_width="226dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:layout_margin="8dp" />


</RelativeLayout>